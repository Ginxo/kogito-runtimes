pipeline{
    agent {label 'kogito-cloud'}
    stages{
        stage('Update version in pom'){
            steps{
                sh 'pwd'
                sh 'ls -la'
                updateMavenVersion()
            }
        }
    }
}

def updateMavenVersion(){

   def doc = new XmlSlurper().parse(new File("/home/jenkins/agent/workspace/Custom/mmagnani/kogito-2284/pom.xml"))
   def version = doc.version.text()
   println(version)
}
