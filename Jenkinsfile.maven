pipeline{
    agent {label 'operator-slave'}
    stages{
        stage('Update version in pom'){
            steps{
               dir ("${WORKSPACE}") {
                   updateMavenVersion()
              }     
            }
        }
    }
}

def updateMavenVersion(){
 def files = findFiles(glob: '**/pom.xml') echo """${files[0].name} ${files[0].path} ${files[0].directory} ${files[0].length} ${files[0].lastModified}"""
}
