pipeline{
    agent {label 'kogito-cloud'}
    stages{
        stage('Update version in pom'){
            steps{
                sh 'pwd'
                sh 'ls -la'
                updateMavenVersion()
            }
        }
    }
}

def updateMavenVersion(){
   def dir = new File("${workspace}", 'pom.xml')
   def pom = new XmlSlurper().parse(dir)
   println "Version of pom: ${pom.version}"

}
