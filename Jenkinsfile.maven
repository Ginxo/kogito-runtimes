pipeline{
    agent {label 'operator-slave'}
    stages{
        stage('Update version in pom'){
            steps{
               dir ("${WORKSPACE}") {
                   updateMavenVersion()
              }     
            }
        }
    }
}

def updateMavenVersion(){
    def pom = new XmlSlurper().parse(new File("${WORKSPACE}/pom.xml"))
    def version = pom.version.text()
    println(version)   
}
