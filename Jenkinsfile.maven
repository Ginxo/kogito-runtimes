pipeline{
    agent {label 'kogito-cloud'}
    stages{
        stage('Update maven version'){
            steps{
                sh "hostname"
                sh "echo ****"
                updateMavenVersion()
            }
        }
    }
}   

def updateMavenVersion(){
    def proc = "hostname".execute()
    def b = new StringBuffer()
    proc.consumeProcessErrorStream(b)
    println proc.text
    println b.toString()
}
