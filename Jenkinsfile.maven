pipeline{
    agent {label 'kogito-cloud'}
    stages{
        stage('Update version in pom'){
            steps{
               dir ("${WORKSPACE}") {
                   updateMavenVersion()
              }     
            }
        }
    }
}

def updateMavenVersion(){

   def doc = new XmlSlurper().parse(new File("/pom.xml"))
   def version = doc.version.text()
   println(version)
}
