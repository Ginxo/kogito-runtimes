pipeline{
    agent {label 'operator-slave'}
    stages{
        stage('Update version in pom'){
            steps{
                sh 'pwd'
                sh 'ls -la'
                updateMavenVersion()
            }
        }
    }
}

def updateMavenVersion(){
    def pomXml = new XmlSlurper().parse("$WORKSPACE/pom.xml")
    def mavenVersion = pomXml.project.modelVersion
    assert mavenVersion.text() == '4.0.0'
}
