pipeline{
    agent {label 'operator-slave'}
    stages{
        stage('Update version in pom'){
            steps{
                sh 'pwd'
                sh 'ls -la'
                updateMavenVersion()
            }
        }
    }
}

def updateMavenVersion(){
    def pom = new File('pom.xml').getText('utf-8')
    def doc = new XmlParser().parseText(pom)
    def version = doc.version.text()
    println(version)
}
